# Spotify Artist Configuration
ARTIST_URL=https://artists.spotify.com/c/artist/41pwUFNGuwEl50hAQPV8ok/home

# Server Configuration
PORT=3000

# Scraping Configuration
# 建议间隔: 10000-30000 毫秒 (10-30秒), 避免触发 Spotify 反爬虫机制
SCRAPE_INTERVAL=15000

# File Paths
COOKIES_FILE=cookies.json
DATABASE_FILE=listeners.db

# Email Notification Configuration (Optional)
# 启用后会在登录过期或连续抓取失败时发送邮件通知
EMAIL_ENABLED=false
EMAIL_TO=your-email@gmail.com

# 邮件服务提供商: 'resend' (推荐) 或 'smtp'
EMAIL_PROVIDER=resend

# Resend 配置 (推荐 - 更安全、更简单)
# 1. 访问 https://resend.com 注册账号
# 2. 创建 API Key
# 3. 填入下方
RESEND_API_KEY=re_xxxxxxxx
EMAIL_FROM=Spotify Tracker <onboarding@resend.dev>

# SMTP 配置 (备用 - 如使用 Gmail 需要应用专用密码)
# EMAIL_PROVIDER=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
